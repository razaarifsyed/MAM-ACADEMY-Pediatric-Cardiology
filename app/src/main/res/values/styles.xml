<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/muc2</item>
        <item name="colorPrimaryDark">@color/muc2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/muc2</item>
        <item name="colorPrimaryDark">@color/muc2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/muc3</item>
        <item name="android:textColor">@color/muc4</item>

    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/muc3</item>
        <item name="android:textColor">@color/muc4</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#fff</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#fff</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/muc2</item>
    </style>


</resources>
